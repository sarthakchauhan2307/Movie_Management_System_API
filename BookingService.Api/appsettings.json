{
  "ConnectionStrings": {
    "BookingServiceConnection": "Server=(localdb)\\MSSQLLocalDB;Database=BookingServiceDb;Trusted_Connection=True",
    "RaddisURL": "localhost:6379"
  },
  "MicroServiceUrls": {
    "TheatreMasterService": "https://localhost:7176",
    "Movieservice": "https://localhost:7053"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Ocelot": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:8081"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]

  },
  "JwtSettings": {
    "Issuer": "*",
    "Key": "A_Very_Long_And_Secure_Secret_Key_12345!",
    "Audience": "*"
  },

  "RabbitMQHost": "localhost",
  "RabbitMQPort": "5672",
  "AllowedHosts": "*"
}
